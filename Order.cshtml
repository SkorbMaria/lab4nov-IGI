@model IEnumerable<IGI_5.Models.Order>
@{
    ViewData["Title"] = "Orders";
}

<br />
<br />
<br />
<br />
<h2>Orders</h2>

<p>
    <a asp-controller="User" asp-action="AddOrder">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Order" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="ID">@Html.DisplayNameFor(model => model.ID)</a>
            </th>
            <th>
                <a asp-action="Order" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="RecieveDate"> @Html.DisplayNameFor(model => model.RecieveDate)</a>
            </th>
            <th>
                <a asp-action="Order" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="CompleteDate"> @Html.DisplayNameFor(model => model.CompleteDate)</a>
            </th>
            <th>
                <a asp-action="Order" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="Book"> @Html.DisplayNameFor(model => model.Book.Name)</a>
            </th>
            <th>
                <a asp-action="Order" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="Customer"> @Html.DisplayNameFor(model => model.Customer.Name)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecieveDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompleteDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>
                <td>
                    <a asp-controller="User" asp-action="EditOrder" asp-route-id="@item.ID">Edit</a> |
                    <a asp-controller="User" asp-action="RemoveOrder" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.PageViewModel.HasPreviousPage)
{
    <a asp-action="Order" asp-route-page="@(ViewBag.PageViewModel.PageNumber - 1)" class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (ViewBag.PageViewModel.HasNextPage)
{
    <a asp-action="Order" asp-route-page="@(ViewBag.PageViewModel.PageNumber + 1)" class="btn btn-default btn">
        Вперед
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}