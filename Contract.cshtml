@model IEnumerable<IGI_5.Models.Contract>
@{
    ViewData["Title"] = "Contracts";
}

<br />
<br />
<br />
<br />
<h2>Contracts</h2>

<p>
    <a asp-controller="User" asp-action="AddContract">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Contract" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="ID">@Html.DisplayNameFor(model => model.ID)</a>
            </th>
            <th>
                <a asp-action="Contract" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="DateStart"> @Html.DisplayNameFor(model => model.DateStart)</a>
            </th>
            <th>
                <a asp-action="Contract" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="Term"> @Html.DisplayNameFor(model => model.Term)</a>
            </th>
            <th>
                <a asp-action="Contract" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="Book"> @Html.DisplayNameFor(model => model.Book.Name)</a>
            </th>
            <th>
                <a asp-action="Contract" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="Autor"> @Html.DisplayNameFor(model => model.Autor.About)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Term)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor.About)
                </td>
                <td>
                    <a asp-controller="User" asp-action="EditContract" asp-route-id="@item.ID">Edit</a> |
                    <a asp-controller="User" asp-action="RemoveContract" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.PageViewModel.HasPreviousPage)
{
    <a asp-action="Contract" asp-route-page="@(ViewBag.PageViewModel.PageNumber - 1)" class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (ViewBag.PageViewModel.HasNextPage)
{
    <a asp-action="Contract" asp-route-page="@(ViewBag.PageViewModel.PageNumber + 1)" class="btn btn-default btn">
        Вперед
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}