@model IEnumerable<IGI_5.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<br />
<br />
<br />
<br />
<h2>Customers</h2>

<p>
    <a asp-controller="User" asp-action="AddCustomer">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Customer" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="ID"> @Html.DisplayNameFor(model => model.ID)</a>
            </th>
            <th>
                <a asp-action="Customer" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="Name"> @Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th>
                <a asp-action="Customer" asp-route-page="@ViewBag.PageViewModel.PageNumber" asp-route-sort="About"> @Html.DisplayNameFor(model => model.About)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.About)
                </td>
                <td>
                    <a asp-controller="User" asp-action="EditCustomer" asp-route-id="@item.ID">Edit</a> |
                    <a asp-controller="User" asp-action="RemoveCustomer" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.PageViewModel.HasPreviousPage)
{
    <a asp-action="Customer" asp-route-page="@(ViewBag.PageViewModel.PageNumber - 1)" class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (ViewBag.PageViewModel.HasNextPage)
{
    <a asp-action="Customer" asp-route-page="@(ViewBag.PageViewModel.PageNumber + 1)" class="btn btn-default btn">
        Вперед
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}